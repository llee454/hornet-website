<?xml version="1.0" encoding="utf-8"?>
<!--
  This file defines the configuration settings for
  the system. It lists the modules that comprise
  the system and whether or not they have been
  enabled or disabled.
-->
<settings>

  <!--
    The errorMode indicates whether or not the system
    will fail and report data and user errors or
    whether or not it will try to recover dynamically
    from them. There are two valid settings: "strict",
    and "nonstrict". Enable "strict" mode during
    testing, but select "nonstrict" in production.
  -->
  <errorMode>nonstrict</errorMode>

  <!--
    runUnittests indicates whether Lucidity should run
    its unit tests or not. If true, QUnit runs
    once the module load handlers are all ready, and
    the app load handlers do not execute. If false, 
    the app load handlers execute normally.
  -->
  <runUnittests>false</runUnittests>

  <!--
    The theme element gives the location of the CSS
    file that defines the site's theme. Themes are
    represented by directories within /themes. Every
    theme directory contains a CSS file named
    /themes/THEME NAME/THEME NAME.css.
  -->
  <theme>themes/standard/standard.css</theme>

  <!--
    The modules element contains a list of all of the
    modules installed on the system and whether or
    not they have been enabled or disabled.
  -->
  <modules>
    <!-- level 1 modules -->
    <module name="block"            enabled="true"  url="modules/block/block.js"/>
    <module name="page"             enabled="true"  url="modules/page/page.js"/>

    <!-- level 2 modules -->
    <module name="curly"            enabled="true"  url="modules/curly/curly.js"/>
    <module name="search"           enabled="true"  url="modules/search/search.js"/>

    <!-- level 3 modules -->
    <module name="accordion"        enabled="true"  url="modules/accordion/accordion.js"/>
    <module name="article"          enabled="true"  url="modules/article/article.js"/>
    <module name="analytics"        enabled="true"  url="modules/analytics/analytics.js"/>
    <module name="book"             enabled="true"  url="modules/book/book.js"/>
    <module name="bxslider"         enabled="true"  url="modules/bxslider/bxslider.js"/>
    <module name="coq"              enabled="true"  url="modules/coq/coq.js"/>
    <module name="example"          enabled="true"  url="modules/example/example.js"/>
    <module name="form"             enabled="true"  url="modules/form/form.js"/>
    <module name="lightbox"         enabled="true"  url="modules/lightbox/lightbox.js"/>
    <module name="menu"             enabled="true"  url="modules/menu/menu.js"/>
    <module name="modal"            enabled="true"  url="modules/modal/modal.js"/>
    <module name="presentation"     enabled="true"  url="modules/presentation/presentation.js"/>
    <module name="rate"             enabled="true"  url="modules/rate/rate.js"/>
    <module name="select"           enabled="true"  url="modules/select/select.js"/>
    <module name="sidr"             enabled="true"  url="modules/sidr/sidr.js"/>
    <module name="template"         enabled="true"  url="modules/template/template.js"/>
    <module name="video"            enabled="false" url="modules/video/video.js"/>
    <module name="video_library"    enabled="false" url="modules/video_library/video_library.js"/>
  </modules>
</settings>
